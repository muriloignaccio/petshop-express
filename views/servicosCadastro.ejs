<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head'); %>

	<body>

		<%- include('./partials/header'); %>

			<main class="admin">
				<div class="container">
					<h1>Painel Administrativo</h1>
					<a href=""> voltar para lista de serviços</a>

					<form action="/admin/servicos/cadastrar" enctype="multipart/form-data" method="POST">
						<% if (typeof erros !== 'undefined') { %>
							<% erros.forEach(erro => { %>
								<p><%= erro %></p>
							<% }) %>
						<% } %>
						<fieldset>
							<legend>Novo Serviço</legend>
							<label for="nome">Nome</label>
							<input type="text" name="nome" id="nome" required>

							<label for="descricao">Descrição</label>
							<textarea name="descricao" id="descricao"></textarea>

							<label for="preco">Preço</label>
							<input type="number" name="preco" id="preco">

							<label for="ilustracao">Ilustração</label>
							<input type="file" name="ilustracao" id="ilustracao">

							<button type="submit" class="btn btn-primary">Enviar</button>
						</fieldset>
					</form>
				</div>
			</main>

			<%- include('./partials/footer'); %>

	</body>

</html>